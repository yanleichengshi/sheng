<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tan.orders.dao.UserDao">
    <resultMap id="userInfos" type="com.tan.orders.entity.UserEntity">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="user_name" jdbcType="VARCHAR" property="userName"/>
        <result column="pwd" jdbcType="VARCHAR" property="pwd"/>
        <result column="del_flag" jdbcType="VARCHAR" property="delFlag"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>
    <select id="getUsers" resultMap="userInfos">
        SELECT * FROM t_user;
    </select>

    <insert id="register" parameterType="com.tan.orders.entity.UserEntity" useGeneratedKeys="true" >
        INSERT INTO t_user
        (
          user_name, pwd,
        ) VALUES ()
    </insert>
</mapper>